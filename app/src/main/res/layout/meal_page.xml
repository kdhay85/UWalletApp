<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealActivity">

    <!-- Meal Swipes -->
    <TextView
        android:id="@+id/mealSwipesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Swipes:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealSwipesValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Guest Swipes -->
    <TextView
        android:id="@+id/guestSwipesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest Swipes:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mealSwipesValueTextView" />

    <TextView
        android:id="@+id/guestSwipesValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mealSwipesValueTextView" />


    <!-- Dining Dollars -->
    <TextView
        android:id="@+id/diningDollarsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dining Dollars:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guestSwipesValueTextView" />

    <TextView
        android:id="@+id/diningDollarsValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50.00"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guestSwipesValueTextView" />

    <!-- Last Transactions -->
    <TextView
        android:id="@+id/lastTransactionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Transactions:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diningDollarsValueTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastTransactionsTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>